<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javafx_lab6.Controller.ConverterController"
      spacing="20" alignment="CENTER">
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Label text="Converter" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

    <ChoiceBox fx:id="modeSelector" prefWidth="200" style="-fx-font-size: 14px;"/>
    <TextField fx:id="inputField" promptText="Enter value" prefWidth="200" style="-fx-font-size: 16px;"/>
    <Button text="Convert" onAction="#convert" prefWidth="200" style="-fx-font-size: 16px;"/>
    <Label fx:id="resultLabel" text="Result:" style="-fx-font-size: 18px;"/>
</VBox>
