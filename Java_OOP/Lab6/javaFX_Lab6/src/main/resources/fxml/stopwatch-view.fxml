<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javafx_lab6.Controller.StopwatchController"
      spacing="15" alignment="CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label fx:id="timeLabel" text="00:00:00" style="-fx-font-size: 24px;"/>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="startPauseButton" text="Start" onAction="#handleStartPause"/>
        <Button fx:id="clearButton" text="Clear" onAction="#handleClear"/>
    </HBox>
</VBox>
