<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<VBox spacing="15" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.eventmanagerproject.controller.EventDetailsController">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Label fx:id="titleLabel" style="-fx-font-size: 18px; -fx-font-weight: bold"/>
    <Label fx:id="dateLabel"/>
    <Label fx:id="locationLabel"/>
    <Label fx:id="creatorLabel"/>

    <TextArea fx:id="descriptionArea" editable="false" wrapText="true" prefHeight="150" prefWidth="300"/>

    <HBox spacing="20" alignment="CENTER">
        <Button fx:id="actionButton" onAction="#onActionClicked" text="Участвовать" prefWidth="140"/>
        <Button text="Назад" onAction="#onBackClicked" prefWidth="140"/>
    </HBox>

    <Button text="Открыть чат" onAction="#onChatClicked"/>

</VBox>
